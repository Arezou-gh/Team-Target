# Initialize the turtle and the screen 
ima = turtle.Screen()
dan = turtle.Turtle()

#Write a letter from a function
dan.speed(0)

#writev(dan,-110,-160)
writev(dan,-610,40)
writei(dan,-510,40)
writes(dan,-410,40)
writei(dan,-310,40)
writet(dan,-210,40)

writeM(dan,-610,-260)
writei(dan,-510,-260)
writen(dan,-410,-260)
writen(dan,-310,-260)
writee(dan,-210,-260)
writes(dan,-110,-260)
writeo(dan,-10,-260)
writet(dan,90,-260)
writea(dan,190,-260)

#writetriangle(dan,0,0)

# Ensure that you can close the window that you created. 
ima.exitonclick()
